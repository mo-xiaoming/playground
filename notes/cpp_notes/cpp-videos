  ```cpp
  #define FWD(...) \
    foo(std::forward<decltype(__VA_ARGS__)>(__VA_ARGS__)...)
  #define LIFT(X) [](auto&&... args) \
    noexcept(noexcept(X(FWD(args)...))) \
        -> decltype(X(FWD(args)...)) \
      { \
        return X(FWD(args)...); \
      }

  std::transform(first, last, target, LIFT(foo));
  ```
